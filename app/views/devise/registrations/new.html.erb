<div class='signup-container'>
  <div class='signup-form'>
    <h4 id='signup-title'>Join the system</h4>
    <%= form_for(resource, as: resource_name, url: registration_path(resource_name)) do |f| %>
      <div class='error-message'>
        <%= devise_error_messages! %>
      </div>
      <div class='field'>
        <%= f.email_field :email, autofocus: true, placeholder: 'your email', required: 'required', minlength: '6' %>
      </div>
      <div class='field'>
        <%= f.password_field :password, autocomplete: 'off', placeholder: 'password', required: 'required', minlength: '6' %>
      </div>
      <div class='field'>
        <%= f.password_field :password_confirmation, autocomplete: 'off', placeholder: 'password confirmation', required: 'required', minlength: '6' %>
      </div>
      <div class='actions'>
        <%= f.submit 'Sign up' %>
      </div>
    <% end %>
    <%= render 'devise/shared/links' %>
  </div>
</div>
