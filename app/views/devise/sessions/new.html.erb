<div class="login-container">
  <div class="login-form">
    <h4 id="login-title">Join the system</h4>
    <%= form_for(resource, as: resource_name, url: session_path(resource_name)) do |f| %>
      <div class="field">
        <%= f.email_field :email, autofocus: true, placeholder: 'your email', required: 'required', minlength: '6' %>
      </div>
      <div class="field">
        <%= f.password_field :password, autocomplete: 'off', placeholder: '******', required: 'required', minlength: '6' %>
      </div>
      <% if flash[:alert] %>
        <div class="error-message">
          <%= flash[:alert] %>
        </div>
      <% end %>
      <% if devise_mapping.rememberable? %>
        <div class="field">
          <%= f.check_box :remember_me %>
          <%= f.label :remember_me %>
        </div>
      <% end %>
      <div class="actions">
        <%= f.submit 'Log in' %>
      </div>
    <% end %>
    <%= render 'devise/shared/links' %>
  </div>
</div>
